<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Hotel.MVVM.ViewModels"
                    xmlns:views="clr-namespace:Hotel.MVVM.Views"
                    xmlns:modals="clr-namespace:Hotel.MVVM.Views.Modals">

    <DataTemplate DataType="{x:Type viewModels:ReservationsListingViewModel}">
        <views:ReservationsListingView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:GuestViewModel}">
        <views:GuestView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewModels:RoomsViewModel}">
        <views:RoomsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:AddReservationViewModel}">
        <modals:AddReservationView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:AddGuestViewModel}">
        <modals:AddGuestsView />
    </DataTemplate>

</ResourceDictionary>
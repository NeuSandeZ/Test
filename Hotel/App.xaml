<Application x:Class="Hotel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Hotel.Utilities.Converters">

    <Application.Resources>

        <ResourceDictionary x:Key="">
            <ResourceDictionary.MergedDictionaries>

                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <ResourceDictionary Source="Utilities/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Utilities/Styles/ImageStyle.xaml" />
                <ResourceDictionary Source="Utilities/Styles/TextStyle.xaml" />
                <ResourceDictionary Source="Utilities/Styles/PageStyle.xaml" />
                <ResourceDictionary Source="Utilities/MyDataTemplate.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <converters:StandardConverter x:Key="StandardConverter" />
            <converters:InversedConverter x:Key="InversedConverter" />

        </ResourceDictionary>

    </Application.Resources>

</Application>
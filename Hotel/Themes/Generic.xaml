    <Style TargetType="{x:Type local:CrudViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                
                <ControlTemplate TargetType="{x:Type local:CrudViewBase}">
                    
                    <Grid Margin="0,0,0,0">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,5,0 ,5">
                            
                            <TextBox Height="40"
                                     Width="200"
                                     Text="Search..."
                                     Foreground="Azure"
                                     Background="MediumPurple"
                                     FontSize="16"
                                     HorizontalAlignment="Left"
                                     VerticalContentAlignment="Center"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="40">
                                
                                <Button Content="Add" 
                                        FontSize="16"
                                        Margin="0 0 10 0" 
                                        Command="{Binding OpenModal}"
                                        />

                                <Button Content="Edit" 
                                        FontSize="16"
                                        Margin="0 0 10 0" />
                                
                                <Button Content="Delete" 
                                        FontSize="16"
                                        Margin="0 0 10 0" />
                                
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Grid.Row="1" Background="Azure">
                            <Label>Tu bedzie filtrowanie i sortownaie</Label>
                        </StackPanel>
                        
                        <ContentPresenter Grid.Row="2" Margin="0,5,0,5"/>
                        
                    </Grid>
                    
                </ControlTemplate>
                
            </Setter.Value>
        </Setter>
    </Style>

